# Dynamic theme colors
config-file = ?"~/.config/omarchy/current/theme/ghostty.conf"

# Font
font-family = "JetBrainsMono Nerd Font"
font-style = Regular
font-size = 9

# Window
window-theme = ghostty
window-padding-x = 14
window-padding-y = 14
confirm-close-surface=false
resize-overlay = never
gtk-toolbar-style = flat

# Cursor styling
cursor-style = "block"
cursor-style-blink = false

# Cursor styling + SSH session terminfo
# (all shell integration options must be passed together)
shell-integration-features = no-cursor,ssh-env

# Keyboard bindings
keybind = shift+insert=paste_from_clipboard
keybind = control+insert=copy_to_clipboard

# ======================
# Resize split (Ctrl + Shift + Arrow)
# ======================
keybind = control+shift+arrow_down=resize_split:down,100 
keybind = control+shift+arrow_up=resize_split:up,100 
keybind = control+shift+arrow_left=resize_split:left,100 
keybind = control+shift+arrow_right=resize_split:right,100

# ======================
# Move between splits (Alt + Arrow)
# ======================
keybind = alt+arrow_up=goto_split:up
keybind = alt+arrow_down=goto_split:down
keybind = alt+arrow_left=goto_split:left
keybind = alt+arrow_right=goto_split:right

# ======================
# Move between tabs (Ctrl + Alt + Arrow)
# ======================
keybind = ctrl+alt+arrow_left=previous_tab
keybind = ctrl+alt+arrow_right=next_tab

keybind = ctrl+shift+backslash=new_split:right
keybind = ctrl+shift+minus=new_split:down

# Slowdown mouse scrolling
mouse-scroll-multiplier = 0.95
